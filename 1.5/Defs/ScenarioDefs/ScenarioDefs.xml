<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!--Pillux Home destroyed:2-->
	<ScenarioDef>
		<defName>LogannMercs</defName>
		<label>Logann Mercs</label>
		<description>Three Logann set out from the main base to form their own mercenary company.</description>
		<scenario>
			<summary>New Logann Merc Company.</summary>
			<playerFaction>
				<def>PlayerFaction</def>
				<factionDef>LogannPlayerColony</factionDef>
			</playerFaction>
			<parts>
				<!-- Config pages -->
				<li Class="ScenPart_ConfigPage_ConfigureStartingPawns_Xenotypes">
					<def>ConfigurePawnsXenotypes</def>
					<pawnChoiceCount>3</pawnChoiceCount>
					<customSummary>Start with just Logann.</customSummary>
					<overrideKinds>
						<li>
							<xenotype>Logann</xenotype>
							<pawnKind>LogannColonist</pawnKind>
						</li>
					</overrideKinds>
					<xenotypeCounts>
						<li>
							<xenotype>Logann</xenotype>
							<count>3</count>
							<description>logann</description>
							<allowedDevelopmentalStages>Adult</allowedDevelopmentalStages>
						</li>
					</xenotypeCounts>
				</li>
				<!-- Pawn Arrive Method -->
				<li Class="ScenPart_PlayerPawnsArriveMethod">
					<def>PlayerPawnsArriveMethod</def>
					<method>Standing</method>
				</li>
				<!-- Player Starting Items -->
				<li Class="ScenPart_StartingThing_Defined">
					<def>StartingThing_Defined</def>
					<thingDef>Silver</thingDef>
					<count>30</count>
				</li>
				<li Class="ScenPart_StartingThing_Defined">
					<def>StartingThing_Defined</def>
					<thingDef>Pemmican</thingDef>
					<count>150</count>
				</li>
				<li Class="ScenPart_StartingThing_Defined">
					<def>StartingThing_Defined</def>
					<thingDef>MedicineIndustrial</thingDef>
					<count>5</count>
				</li>
				<li Class="ScenPart_StartingThing_Defined">
					<def>StartingThing_Defined</def>
					<thingDef>MeleeWeapon_Knife</thingDef>
					<stuff>Steel</stuff>
					<count>2</count>
				</li>
				<!-- Scattered Items Throughout Map -->
				<li Class="ScenPart_ScatterThingsAnywhere">
					<def>ScatterThingsAnywhere</def>
					<thingDef>ShipChunk</thingDef>
					<count>8</count>
				</li>
				<li Class="ScenPart_ScatterThingsAnywhere">
					<def>ScatterThingsAnywhere</def>
					<thingDef>Steel</thingDef>
					<count>205</count>
				</li>
				<li Class="ScenPart_ScatterThingsAnywhere">
					<def>ScatterThingsAnywhere</def>
					<thingDef>WoodLog</thingDef>
					<count>250</count>
				</li>
				<!-- Starting Message -->
				<li Class="ScenPart_GameStartDialog">
					<def>GameStartDialog</def>
					<text>Three Logann set out from the main base to form their own mercenary company.</text>
					<closeSound>GameStartSting</closeSound>
				</li>
			</parts>
		</scenario>
	</ScenarioDef>

</Defs>