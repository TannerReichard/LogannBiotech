<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<ThingDef ParentName="BaseHumanMakeableGun">
    <defName>WolverineShotgun</defName>
    <label>wolverine shotgun</label>
    <description>A magazine-fed fully automatic shotgun. Short range and very low accuracy, but extraordinarily dangerous.</description>
    <graphicData>
      <texPath>Things/Item/Weapon/Ranged/WolverineShotgun</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Shotgun</soundInteract>
    <recipeMaker>
      <researchPrerequisite>GasOperation</researchPrerequisite>
      <skillRequirements>
        <Crafting>10</Crafting>
      </skillRequirements>
    </recipeMaker>
    <statBases>
      <WorkToMake>40000</WorkToMake>
      <Mass>5.6</Mass>
      <AccuracyTouch>0.47</AccuracyTouch>
      <AccuracyShort>0.56</AccuracyShort>
      <AccuracyMedium>0.46</AccuracyMedium>
      <AccuracyLong>0.32</AccuracyLong>
      <RangedWeapon_Cooldown>1.78</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>120</Steel>
      <ComponentIndustrial>8</ComponentIndustrial>
    </costList>
	<weaponClasses>
      <li>ShortShots</li>
    </weaponClasses>
	<weaponTags>
      <li>IndustrialGunAdvanced</li>
    </weaponTags>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_WolverineShotgun</defaultProjectile>
        <warmupTime>1.2</warmupTime>
        <range>11.1</range>
        <burstShotCount>5</burstShotCount>
        <ticksBetweenBurstShots>2</ticksBetweenBurstShots>
        <soundCast>Shot_Shotgun</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>5</power>
        <cooldownTime>1.5</cooldownTime>
      </li>
      <li>
        <label>bayonette</label>
        <capacities>
          <li>Stab</li>
        </capacities>
        <power>11</power>
        <cooldownTime>1.5</cooldownTime>
      </li>
    </tools>
  </ThingDef>  
  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_WolverineShotgun</defName>
    <label>shotgun blast</label>
    <graphicData>
      <texPath>Things/Projectile/Bullet_Shotgun</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>12</damageAmountBase>
      <stoppingPower>4</stoppingPower>
      <armorPenetrationBase>0.14</armorPenetrationBase>
      <speed>55</speed>
    </projectile>
  </ThingDef>
</Defs>